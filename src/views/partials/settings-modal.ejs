<!-- src/views/partials/settings-modal.ejs -->
<!-- Settings Modal -->
<div
  class="modal fade"
  id="settingsModal"
  tabindex="-1"
  aria-labelledby="settingsModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="settingsModalLabel">
          <i class="bi bi-gear me-2"></i>
          Settings
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <!-- Loading state -->
        <div id="settingsLoading" class="text-center py-4">
          <div class="loading mx-auto"></div>
          <p class="mt-2 text-muted">Loading settings...</p>
        </div>

        <!-- Settings content (initially hidden) -->
        <div id="settingsContent" style="display: none">
          <!-- Profile Settings -->
          <div class="card mb-3">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-person me-2"></i>
                Profile Information
              </h6>
            </div>
            <div class="card-body">
              <form id="profileForm">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="userName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="userName"
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="userCode" class="form-label"
                      >3-Letter Code</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="userCode"
                      maxlength="3"
                      style="text-transform: uppercase"
                      required
                    />
                    <div class="form-text">
                      Must be exactly 3 uppercase letters
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="userSignature" class="form-label"
                    >Email Signature</label
                  >
                  <textarea
                    class="form-control"
                    id="userSignature"
                    rows="3"
                    placeholder="Best regards,&#10;Your Name"
                    required
                  ></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-lg me-1"></i>
                  Update Profile
                </button>
              </form>
            </div>
          </div>
          <!-- Email Preferences Card -->
          <div class="card mb-3">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-envelope-gear me-2"></i>
                Email Preferences
                <span id="emailPrefBadge" class="badge bg-secondary ms-2"
                  >Loading...</span
                >
              </h6>
            </div>
            <div class="card-body">
              <p class="card-text text-muted mb-3">
                Choose how you want to handle time-off request emails.
              </p>

              <!-- Email Method Selection -->
              <div class="row mb-3">
                <div class="col-md-6 mb-2">
                  <div class="card email-method-card h-100" id="automaticCard">
                    <div class="card-body text-center p-3">
                      <div class="mb-2">
                        <i class="bi bi-robot fs-2 text-primary"></i>
                      </div>
                      <h6 class="card-title mb-2">ðŸ¤– Automatic</h6>
                      <p class="card-text small text-muted mb-2">
                        Emails sent automatically when you create requests
                      </p>
                      <div class="form-check d-flex justify-content-center">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="emailPreference"
                          id="automatic"
                          value="automatic"
                        />
                        <label class="form-check-label ms-2" for="automatic">
                          Choose
                        </label>
                      </div>
                      <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        Requires Gmail access
                      </small>
                    </div>
                  </div>
                </div>

                <div class="col-md-6 mb-2">
                  <div class="card email-method-card h-100" id="manualCard">
                    <div class="card-body text-center p-3">
                      <div class="mb-2">
                        <i class="bi bi-clipboard fs-2 text-success"></i>
                      </div>
                      <h6 class="card-title mb-2">ðŸ“§ Manual</h6>
                      <p class="card-text small text-muted mb-2">
                        Copy email content and send from your email client
                      </p>
                      <div class="form-check d-flex justify-content-center">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="emailPreference"
                          id="manual"
                          value="manual"
                        />
                        <label class="form-check-label ms-2" for="manual">
                          Choose
                        </label>
                      </div>
                      <small class="text-muted">
                        <i class="bi bi-shield-check"></i>
                        Full privacy
                      </small>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Gmail Authorization Section -->
              <div
                id="gmailAuthSection"
                class="alert alert-info"
                style="display: none"
              >
                <div class="d-flex align-items-center">
                  <i class="bi bi-google text-primary fs-5 me-2"></i>
                  <div class="flex-grow-1">
                    <h6 class="mb-1">Gmail Authorization Required</h6>
                    <p class="mb-2 small">
                      To use automatic email sending, grant Gmail permissions.
                    </p>
                    <button
                      id="authorizeGmailBtn"
                      class="btn btn-outline-primary btn-sm"
                    >
                      <i class="bi bi-google"></i> Authorize Gmail
                    </button>
                  </div>
                </div>
              </div>

              <!-- Current Status -->
              <div class="row">
                <div class="col-md-6">
                  <small class="text-muted">Current Mode:</small>
                  <div id="emailModeStatus">
                    <i class="bi bi-circle-fill text-secondary"></i>
                    <span>Loading...</span>
                  </div>
                </div>
                <div class="col-md-6">
                  <small class="text-muted">Gmail Access:</small>
                  <div id="gmailAccessStatus">
                    <i class="bi bi-circle-fill text-secondary"></i>
                    <span>Loading...</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- App Settings -->
          <div class="card mb-3">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-sliders me-2"></i>
                Application Settings
              </h6>
            </div>
            <div class="card-body">
              <form id="settingsForm">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="theme" class="form-label">Theme</label>
                    <select class="form-select" id="theme">
                      <option value="light">Light</option>
                      <option value="dark">Dark</option>
                    </select>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="language" class="form-label">Language</label>
                    <select class="form-select" id="language">
                      <option value="en">English</option>
                      <option value="nl">Nederlands</option>
                      <option value="fr">FranÃ§ais</option>
                      <option value="de">Deutsch</option>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="notifications"
                      />
                      <label class="form-check-label" for="notifications">
                        Enable Notifications
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="autoSave"
                      />
                      <label class="form-check-label" for="autoSave">
                        Auto-save Drafts
                      </label>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-lg me-1"></i>
                  Save Settings
                </button>
                <button
                  type="button"
                  class="btn btn-outline-secondary ms-2"
                  onclick="resetSettings()"
                >
                  <i class="bi bi-arrow-clockwise me-1"></i>
                  Reset to Defaults
                </button>
              </form>
            </div>
          </div>

          <!-- Global System Settings (Read-only) -->
          <div class="card mb-3">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-info-circle me-2"></i>
                System Configuration
              </h6>
            </div>
            <div class="card-body">
              <div class="row text-muted">
                <div class="col-md-6">
                  <small
                    ><strong>Min Advance Days:</strong>
                    <span id="minAdvanceDays">-</span></small
                  ><br />
                  <small
                    ><strong>Max Advance Days:</strong>
                    <span id="maxAdvanceDays">-</span></small
                  >
                </div>
                <div class="col-md-6">
                  <small
                    ><strong>Max Days per Request:</strong>
                    <span id="maxDaysPerRequest">-</span></small
                  ><br />
                  <small
                    ><strong>Approver Email:</strong>
                    <span id="approverEmail">-</span></small
                  >
                </div>
              </div>
            </div>
          </div>

          <!-- Danger Zone -->
          <div class="card border-danger">
            <div class="card-header bg-danger text-white">
              <h6 class="mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Danger Zone
              </h6>
            </div>
            <div class="card-body">
              <p class="text-muted mb-3">
                Permanently delete your account and all associated data. This
                action cannot be undone.
              </p>
              <button
                type="button"
                class="btn btn-outline-danger"
                onclick="confirmDeleteAccount()"
              >
                <i class="bi bi-trash me-1"></i>
                Delete Account
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
