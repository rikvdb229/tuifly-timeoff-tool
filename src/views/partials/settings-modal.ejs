<!-- Settings Modal -->
<div
  class="modal fade"
  id="settingsModal"
  tabindex="-1"
  aria-labelledby="settingsModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="settingsModalLabel">
          <i class="bi bi-gear me-2"></i>
          Settings
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <!-- Loading state -->
        <div id="settingsLoading" class="text-center py-4">
          <div class="loading mx-auto"></div>
          <p class="mt-2 text-muted">Loading settings...</p>
        </div>

        <!-- Settings content (initially hidden) -->
        <div id="settingsContent" style="display: none">
          <!-- Profile Settings -->
          <div class="card mb-3">
            <div class="card-header">
              <h6 class="mb-0">
                <i class="bi bi-person me-2"></i>
                Profile Information
              </h6>
            </div>
            <div class="card-body">
              <form id="profileForm">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="userName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="userName"
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="userCode" class="form-label"
                      >3-Letter Code</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="userCode"
                      maxlength="3"
                      style="text-transform: uppercase"
                      required
                    />
                    <div class="form-text">
                      Must be exactly 3 uppercase letters
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="userSignature" class="form-label"
                    >Email Signature</label
                  >
                  <textarea
                    class="form-control"
                    id="userSignature"
                    rows="3"
                    placeholder="Best regards,&#10;Your Name"
                    required
                  ></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-lg me-1"></i>
                  Update Profile
                </button>
              </form>
            </div>
          </div>
    
<!-- Simplified Email Preferences Section for Settings Modal -->
<div class="card mb-3">
  <div class="card-header">
    <h6 class="mb-0">
      <i class="bi bi-envelope me-2"></i>
      Email Preferences
    </h6>
  </div>
  <div class="card-body">
    
    <!-- Current Email Mode Display Only -->
    <div class="mb-4">
      <h6>Current Email Mode:</h6>
      <div id="emailModeStatus">
        <i class="bi bi-circle-fill text-secondary"></i>
        <span>Loading...</span>
      </div>
    </div>

    <!-- Email Method Selection Cards -->
    <div class="mb-4">
      <label class="form-label">Choose Email Method:</label>
      <div class="row">
        <!-- Manual Email Card -->
        <div class="col-md-6 mb-3">
          <div class="card email-method-card h-100" 
               id="manualCard" 
               data-preference="manual"
               style="cursor: pointer; transition: all 0.3s ease;">
            <div class="card-body text-center p-4">
              <div class="mb-3">
                <i class="bi bi-envelope display-4 text-success"></i>
              </div>
              <h5 class="card-title">Manual Email</h5>
              <p class="card-text text-muted">
                Copy and paste email content to send manually from your email client
              </p>
              <div class="mt-3">
                <span class="badge bg-success">Easy Setup</span>
                <span class="badge bg-outline-secondary">Copy & Paste</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Automatic Email Card -->
        <div class="col-md-6 mb-3">
          <div class="card email-method-card h-100" 
               id="automaticCard" 
               data-preference="automatic"
               style="cursor: pointer; transition: all 0.3s ease;">
            <div class="card-body text-center p-4">
              <div class="mb-3">
                <i class="bi bi-robot display-4 text-primary"></i>
              </div>
              <h5 class="card-title">Automatic Email</h5>
              <p class="card-text text-muted">
                Emails sent automatically via Gmail when you create requests
              </p>
              <div class="mt-3">
                <span class="badge bg-primary">Gmail Required</span>
                <span class="badge bg-outline-secondary">Auto-Send</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Gmail Authorization Section (Only shown when needed) -->
    <div id="gmailAuthSection" class="alert alert-info" style="display: none;">
      <h6 class="alert-heading">
        <i class="bi bi-google me-2"></i>
        Gmail Authorization Required
      </h6>
      <p class="mb-3">
        To use automatic email sending, you need to authorize Gmail access.
        This allows the application to send emails on your behalf.
      </p>
      <button type="button" class="btn btn-primary" data-action="authorizeGmail" id="authorizeGmailBtn">
        <i class="bi bi-google me-2"></i>
        Authorize Gmail Access
      </button>
    </div>

    <!-- Gmail Status Check Section -->
    <div class="alert alert-secondary">
      <h6 class="alert-heading">
        <i class="bi bi-gear me-2"></i>
        Gmail Authorization Status
      </h6>
      <p class="mb-2">
        Having issues with email sending? Check your Gmail authorization status.
      </p>
      <div class="d-flex gap-2">
        <button type="button" class="btn btn-outline-primary btn-sm" data-action="checkGmailAuth">
          <i class="bi bi-search me-1"></i>Check Status
        </button>
        <button type="button" class="btn btn-outline-secondary btn-sm" data-action="showGmailAuth">
          <i class="bi bi-google me-1"></i>Show Authorization
        </button>
      </div>
    </div>

    <!-- Info Section -->
    <div class="alert alert-light">
      <h6 class="alert-heading">
        <i class="bi bi-info-circle me-2"></i>
        How Email Methods Work
      </h6>
      <p class="mb-2">
        <strong>Manual:</strong> When you create a request, the app generates email content that you can copy and paste into your email client.
      </p>
      <p class="mb-0">
        <strong>Automatic:</strong> When you create a request, the app automatically sends the email to the scheduling team via Gmail.
      </p>
    </div>

  </div>
</div>


