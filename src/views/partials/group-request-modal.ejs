<!-- src/views/partials/group-request-modal.ejs -->
<!-- Group Request Modal -->
<div class="modal fade" id="groupRequestModal" tabindex="-1" aria-labelledby="groupRequestModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="groupRequestModalLabel">
          <i class="bi bi-calendar-plus me-2"></i>
          Create Time-Off Request
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="groupRequestForm">
          <!-- Selected Dates Section -->
          <div class="mb-4">
            <label class="form-label fw-bold">
              <i class="bi bi-calendar-check me-1"></i>
              Selected Dates
            </label>
            <div id="selectedDatesList" class="border rounded p-3 bg-light">
              <div class="text-center py-3 text-muted">
                <i class="bi bi-calendar-x fs-1 mb-2 d-block"></i>
                No dates selected yet
              </div>
            </div>
            <small class="form-text text-muted">
              Click on available calendar dates to select them, then click "New Request" to open this form.
            </small>
          </div>

          <!-- Custom Message Section -->
          <div class="mb-4">
            <label for="customMessage" class="form-label fw-bold">
              <i class="bi bi-chat-text me-1"></i>
              Additional Message 
              <small class="text-muted fw-normal">(Optional)</small>
            </label>
            <textarea 
              class="form-control" 
              id="customMessage" 
              rows="4" 
              maxlength="500"
              placeholder="Enter any additional information about your time-off request (e.g., vacation, wedding, medical appointment, etc.)">
            </textarea>
            <div class="form-text">
              <span id="messageCounter">0</span>/500 characters
            </div>
          </div>

          <!-- Request Preview Section -->
          <div class="mb-4">
            <label class="form-label fw-bold">
              <i class="bi bi-eye me-1"></i>
              Request Preview
            </label>
            <div class="card">
              <div class="card-body">
                <h6 class="card-title">Email that will be sent:</h6>
                <div class="bg-light p-3 rounded">
                  <p class="mb-2"><strong>To:</strong> <span id="approverEmail">scheduling@tuifly.be</span></p>
                  <p class="mb-2"><strong>Subject:</strong> <span id="emailSubject">RVB CREW REQUEST - 2025 - January</span></p>
                  <div class="border-top pt-2 mt-2">
                    <p class="mb-1">Dear,</p>
                    <div id="requestLines" class="my-2">
                      <!-- Request lines will be generated here -->
                    </div>
                    <p class="mb-1" id="customMessagePreview" style="display: none;">
                      <!-- Custom message will appear here -->
                    </p>
                    <p class="mb-0">Brgds,<br><span id="userSignature">Rik</span></p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- System Information -->
          <div class="alert alert-info">
            <div class="row">
              <div class="col-md-6">
                <h6 class="alert-heading">
                  <i class="bi bi-info-circle me-1"></i>
                  Request Information
                </h6>
                <ul class="mb-0 small">
                  <li>Requests are sent via email to TUIfly scheduling</li>
                  <li>You'll receive confirmation once processed</li>
                  <li>Flight requests require valid TB flight numbers</li>
                </ul>
              </div>
              <div class="col-md-6">
                <h6 class="alert-heading">
                  <i class="bi bi-clock me-1"></i>
                  Request Limits
                </h6>
                <ul class="mb-0 small">
                  <li><strong>Min advance:</strong> <span id="minAdvanceDays">60</span> days</li>
                  <li><strong>Max advance:</strong> <span id="maxAdvanceDays">120</span> days</li>
                  <li><strong>Max days per request:</strong> <span id="maxDaysPerRequest">4</span></li>
                </ul>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="bi bi-x-lg me-1"></i>
          Cancel
        </button>
        <button type="button" class="btn btn-primary" id="submitGroupRequest" disabled>
          <i class="bi bi-send me-1"></i>
          <span id="submitButtonText">Submit Request</span>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Toast Container for Notifications -->
<div class="toast-container position-fixed top-0 end-0 p-3">
  <!-- Toasts will be dynamically added here -->
</div>