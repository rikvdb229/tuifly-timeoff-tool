<!-- src/views/pages/calendar-dashboard.ejs -->
<!-- Now uses base layout - only contains page content -->

<div class="container-fluid">
  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-md-3 col-6 mb-3">
      <div class="card stats-card bg-warning text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title mb-1">Pending</h5>
              <h3 id="pendingCount" class="mb-0">
                <div class="loading"></div>
              </h3>
            </div>
            <i class="bi bi-clock-history fs-1 opacity-75"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-6 mb-3">
      <div class="card stats-card bg-success text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title mb-1">Approved</h5>
              <h3 id="approvedCount" class="mb-0">
                <div class="loading"></div>
              </h3>
            </div>
            <i class="bi bi-check-circle fs-1 opacity-75"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-6 mb-3">
      <div class="card stats-card bg-danger text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title mb-1">Denied</h5>
              <h3 id="deniedCount" class="mb-0">
                <div class="loading"></div>
              </h3>
            </div>
            <i class="bi bi-x-circle fs-1 opacity-75"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-6 mb-3">
      <div class="card stats-card bg-info text-white">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title mb-1">Total</h5>
              <h3 id="totalCount" class="mb-0">
                <div class="loading"></div>
              </h3>
            </div>
            <i class="bi bi-calendar3 fs-1 opacity-75"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Calendar Container -->
  <div class="calendar-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
<h4 class="mb-0">
            <i class="bi bi-calendar-week text-primary"></i>
            Request Calendar
          </h4>
          <!-- ‚ûï ADD Email Mode Badge -->
          <small class="text-muted">
            Email Mode: 
            <span class="badge <%= user.emailPreference === 'automatic' ? 'bg-primary' : 'bg-success' %> ms-1">
              <%= user.emailPreference === 'automatic' ? 'ü§ñ Automatic' : 'üìß Manual' %>
            </span>
            <a href="#" onclick="openSettingsModal(); return false;" class="ms-2" title="Change email preferences">
              <i class="bi bi-gear"></i>
            </a>
          </small>
        </div>
       <div class="d-flex justify-content-between align-items-center mb-2">
          <h6 class="mb-0">
            <i class="bi bi-info-circle text-info"></i>
            Email Status Legend
          </h6>
          <div class="email-status-legend">
            <div class="email-status-legend-item">
              <span class="email-status-legend-icon">‚úÖ</span>
              <span>Sent/Confirmed</span>
            </div>
            <div class="email-status-legend-item">
              <span class="email-status-legend-icon">üìß</span>
              <span>Ready to Copy</span>
            </div>
            <div class="email-status-legend-item">
              <span class="email-status-legend-icon">üîÑ</span>
              <span>Sending</span>
            </div>
            <div class="email-status-legend-item">
              <span class="email-status-legend-icon">‚ùå</span>
              <span>Failed</span>
            </div>
            <div class="email-status-legend-item">
              <span class="email-status-legend-icon">‚ö†Ô∏è</span>
              <span>Not Sent</span>
            </div>
          </div>
        </div>
      <div class="d-flex align-items-center gap-2">
        <div class="request-legend">
          <div class="legend-item">
            <div class="legend-color request-pending"></div>
            <span>Pending</span>
          </div>
          <div class="legend-item">
            <div class="legend-color request-approved"></div>
            <span>Approved</span>
          </div>
          <div class="legend-item">
            <div class="legend-color request-denied"></div>
            <span>Denied</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Calendar Navigation -->
    <div class="calendar-nav">
      <div class="d-flex justify-content-between align-items-center">
        <button id="prevMonthBtn" class="btn btn-outline-primary">
          <i class="bi bi-chevron-left"></i>
          Previous
        </button>
        <h5 id="currentMonthDisplay" class="mb-0 text-center flex-grow-1">
          Loading...
        </h5>
        <button id="nextMonthBtn" class="btn btn-outline-primary">
          Next
          <i class="bi bi-chevron-right"></i>
        </button>
      </div>
    </div>

    <!-- Calendar Grid -->
    <div id="calendarGrid" class="month-grid">
      <div class="text-center py-4">
        <div class="loading mx-auto"></div>
        <p class="mt-2 text-muted">Loading calendar...</p>
      </div>
    </div>
  </div>

  <!-- Floating Action Button -->
  <button id="createRequestBtn" class="btn btn-primary floating-button">
    <i class="bi bi-plus-lg me-2"></i>
    <span id="requestBtnText">New Request</span>
  </button>
</div>

<!-- Include Group Request Modal -->
<%- include('../partials/group-request-modal') %>

<!-- Page-specific meta tags for configuration -->
<% if (typeof metaTags === 'undefined') { %>
  <% 
    metaTags = `
      <meta name="min-advance-days" content="${process.env.MIN_ADVANCE_DAYS || 60}">
      <meta name="max-advance-days" content="${process.env.MAX_ADVANCE_DAYS || 120}">
      <meta name="max-days-per-request" content="${process.env.MAX_DAYS_PER_REQUEST || 4}">
    `;
  %>
<% } %>