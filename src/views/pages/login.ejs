<!-- Login Page Content -->
<main class="login-page-body">
    <div class="login-container">
        <header class="login-header">
            <i class="bi bi-airplane" aria-hidden="true"></i>
            <h1>TUIfly Time-Off</h1>
            <p class="mb-0">Pilot Request System</p>
        </header>
        
        <section class="login-body">
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                    <% if (error === 'oauth_failed') { %>
                        Login failed. Please try again.
                    <% } else if (error === 'callback_error') { %>
                        Authentication error. Please try again.
                    <% } else { %>
                        <%= error %>
                    <% } %>
                </div>
            <% } %>

            <% if (typeof message !== 'undefined' && message) { %>
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                    <% if (message === 'logged_out') { %>
                        You have been logged out successfully.
                    <% } else if (message === 'account_deleted') { %>
                        Your account has been deleted successfully.
                    <% } else { %>
                        <%= message %>
                    <% } %>
                </div>
            <% } %>

            <div class="text-center mb-4">
                <h2>Welcome Back</h2>
                <p class="text-muted">Sign in with your Google account to continue</p>
            </div>

            <form id="loginForm" class="d-grid">
                <button type="button" class="google-btn" id="googleLoginBtn">
                    <i class="bi bi-google me-2" aria-hidden="true"></i>
                    Continue with Google
                </button>
            </form>

            <ul class="features-list">
                <li><i class="bi bi-calendar-check" aria-hidden="true"></i> Interactive calendar interface</li>
                <li><i class="bi bi-clock" aria-hidden="true"></i> Real-time conflict detection</li>
                <li><i class="bi bi-envelope" aria-hidden="true"></i> Automated email notifications</li>
                <li><i class="bi bi-shield-check" aria-hidden="true"></i> Secure Google authentication</li>
            </ul>

            <footer class="footer-text">
                Secure login powered by Google OAuth<br>
                <small>Version 2.0.0 - Multi-User System</small>
            </footer>
        </section>
    </div>
</main>