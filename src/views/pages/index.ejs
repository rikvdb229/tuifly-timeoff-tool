<!-- Development Environment Status Page -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <article class="card">
                <header class="card-header bg-primary text-white">
                    <h1 class="mb-0"><%= title %></h1>
                </header>
                
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h2 class="h4">✅ <%= message %></h2>
                        <p class="mb-0">Your Node.js development environment is ready!</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <section>
                                <h3 class="h5">Environment Info:</h3>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Node.js Runtime: Active</li>
                                    <li class="list-group-item">Express Server: Running</li>
                                    <li class="list-group-item">Database: PostgreSQL Ready</li>
                                    <li class="list-group-item">View Engine: EJS</li>
                                </ul>
                            </section>
                        </div>
                        
                        <div class="col-md-6">
                            <section>
                                <h3 class="h5">Development Status:</h3>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">✅ Environment Setup</li>
                                    <li class="list-group-item">✅ Database Models</li>
                                    <li class="list-group-item">✅ API Routes</li>
                                    <li class="list-group-item">✅ Frontend Complete</li>
                                </ul>
                            </section>
                        </div>
                    </div>

                    <nav class="mt-4" aria-label="Development actions">
                        <a href="/health" class="btn btn-outline-primary me-2">
                            <i class="bi bi-activity me-1" aria-hidden="true"></i>Check Health Status
                        </a>
                        <a href="/auth/login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-1" aria-hidden="true"></i>Login to App
                        </a>
                    </nav>
                </div>
            </article>
        </div>
    </div>
</div>