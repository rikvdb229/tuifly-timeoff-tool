<!-- Error Page Content -->
<main class="error-page-body">
    <div class="error-container">
        <header class="error-header">
            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
            <h1>Oops! Something went wrong</h1>
        </header>
        
        <section class="error-body">
            <% if (typeof statusCode !== 'undefined' && statusCode) { %>
                <div class="error-code" aria-label="HTTP status code"><%= statusCode %></div>
            <% } %>
            
            <h2 class="mb-3"><%= title %></h2>
            <p class="text-muted mb-4"><%= error %></p>
            
            <nav class="d-grid gap-2 d-md-flex justify-content-md-center" aria-label="Error page navigation">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house me-2" aria-hidden="true"></i>Go Home
                </a>
                <button type="button" id="goBackBtn" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Go Back
                </button>
            </nav>
        </section>
    </div>
</main>