{
  "name": "tuifly-timeoff",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "node tests/scripts/runTests.js unit",
    "test:integration": "node tests/scripts/runTests.js integration",
    "test:e2e": "node tests/scripts/runTests.js e2e",
    "test:models": "node tests/scripts/runTests.js models",
    "test:services": "node tests/scripts/runTests.js services",
    "test:api": "node tests/scripts/runTests.js api",
    "test:security": "node tests/scripts/runTests.js security",
    "test:all": "node tests/scripts/runTests.js --coverage",
    "test:coverage": "node tests/scripts/runTests.js --coverage-only",
    "test:list": "node tests/scripts/runTests.js --list",
    "test:fast": "node tests/scripts/runTests.js unit models services --maxWorkers=1",
    "test:ci": "node tests/scripts/runTests.js --coverage --bail --maxWorkers=2",
    "lint": "eslint src/ public/js/ tests/",
    "lint:fix": "eslint src/ public/js/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"public/js/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"public/js/**/*.js\" \"tests/**/*.js\"",
    "quality": "npm run lint && npm run format:check && npm run test:fast",
    "quality:full": "npm run lint && npm run format:check && npm run test:all",
    "db:create": "node scripts/createDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:flush": "node scripts/flush-database.js"
  },
  "keywords": [
    "tuifly",
    "timeoff",
    "calendar",
    "multi-user",
    "oauth"
  ],
  "author": "",
  "license": "ISC",
  "description": "TUIfly Time-Off Tool - Multi-User Calendar System",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "googleapis": "^152.0.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.7.1",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/node": "^24.0.14",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
