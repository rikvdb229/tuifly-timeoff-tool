ADMIN_EMAILS=rikvandenboer@gmail.com


# Time-off request limits
MIN_ADVANCE_DAYS=60
MAX_ADVANCE_DAYS=120
MAX_DAYS_PER_REQUEST=4

# Default employee settings (fallback values)
EMPLOYEE_CODE=XXX
EMPLOYEE_NAME=User

# =================================================================
# EMAIL CONFIGURATION (Gmail)
# =================================================================
